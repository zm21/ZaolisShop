@model IEnumerable<BLL.Models.CategoryDTO>
@Styles.Render("~/Content/ZaolisShop/Table")
@Styles.Render("~/Content/ZaolisShop/ShoppingCard")

@{
    ViewBag.Title = "Categories List";
}

<div class="container-fluid">

    <p>
        <div>
            @Html.ActionLink("Create", "CreateCategory", "CreateCategory", new { @class = "floating-button" })
        </div>
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditCategory", new { id = item.Id }, new { @class = "floating-button" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "floating-button" })
                </td>
            </tr>
        }
    </table>

</div>
