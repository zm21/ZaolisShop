@model IEnumerable<BLL.Models.ProductInfoDTO>
@Scripts.Render("~/bundles/ShoppingCard");

@{
    ViewBag.Title = "ProductInfoList";
}


<div class="container-fluid">
    <p>
        @Html.ActionLink("Create New", "Create", new { @class = "btn btn-info"})
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Img1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Img2)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>

        <button class="button-modal">Open modal</button>
        <div class="modal is-open">
            <div class="modal-header"><span class="modal-close"></span></div>
            <div class="modal-body">
                <img class="modal-image" src="http://www.hiyabna.com/wp-content/uploads/2014/11/christmas-tree-handsome-christmas-tree-decorations-christmas-tree-john-roberts-christmas-tree-john-lewis-christmas-tree-jeremiah-christmas-tree-jewelry-christmas-tree-java-christmas-tree-jubile.jpg" />
                <div class="modal-info">
                    <h3 class="modal-title">@Html.DisplayFor(modelItem => item.ProductName)</h3>
                    <p class="modal-label">Zaolis</p><span class="item-price">@Html.DisplayFor(modelItem => item.ProductName)</span>
                    <p class="item-description">Make your festive decor sparkle with this classic Christmas tree pre-lit with 150 warm white LED lights. Standing around 6 feet tall, the tree is a great choice for those wanting a nice looking Christmas tree without the hassle of adding lights.</p>
                    <div class="size">
                        <h3>Size</h3>
                        <ul class="sizes-list">
                            <li class="item-size size-selected">S</li>
                            <li class="item-size">M</li>
                            <li class="item-size">L</li>
                            <li class="item-size">XL</li>
                        </ul>
                    </div>
                    <div class="color">
                        <h3>Color of decoration</h3>
                        <ul class="colors-list">
                            <li class="silver color-selected">
                                <div class="item-color">
                                    <input type="radio" />
                                </div>
                            </li>
                            <li class="purple">
                                <div class="item-color">
                                    <input type="radio" />
                                </div>
                            </li>
                            <li class="red">
                                <div class="item-color">
                                    <input type="radio" />
                                </div>
                            </li>
                            <li class="orange">
                                <div class="item-color">
                                    <input type="radio" />
                                </div>
                            </li>
                            <li class="green">
                                <div class="item-color">
                                    <input type="radio" />
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="modal-actions">
                <button class="button-cart">Add to cart</button>
                <button class="button-wishlist">Add to wishlist</button>
            </div>
        </div>

        @foreach (var i in item.Images)
        {
            <td>
                <img src="/Images/Products/@i" alt="Alternate Text" />
            </td>
        }
        @*<td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>*@
    </tr>
        }

    </table>

    </div>
