@model IEnumerable<BLL.Models.ProductInfoDTO>
@Styles.Render("~/Content/ZaolisShop/ShoppingCard")

@{
    ViewBag.Title = "ProductInfoList";
}


<div class="container-fluid">
    <p>
        @Html.ActionLink("Create New", "CreateProductInfo", "AdminPanel", new { id = Model.First().ProductId, controller = "AdminPanel", area = "Admin" }, new { @class = "floating-button" })
    </p>
    <div class="container-fluid d-flex justify-content-center">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3" style="padding: 10px">
                    <div class="card">
                        <img class="card-img-top" src="/Images/Products/@Html.DisplayFor(modelItem => item.Images[0])" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title"><strong>@Html.DisplayFor(modelItem => item.ProductName)</strong></h5>
                            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        </div>
                        <ul class="list-group list-group-flush container d-flex justify-content-center">
                            <li class="list-group-item">Size: @Html.DisplayFor(modelItem => item.Size)</li>
                        </ul>
                        <div class="card-body container d-flex justify-content-center">
                            @Html.ActionLink("Edit", "EditProductInfo", new { id = item.Id }, new { @class = "floating-button" })
                        </div>
                    </div>
                </div>

            }
        </div>

    </div>
</div>
