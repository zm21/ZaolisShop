<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" rel="stylesheet" />
    @*<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />*@
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/ZaolisShop/Home")
    @Styles.Render("~/Content/ZaolisShop/layoutCSS")
    @Styles.Render("~/Content/ZaolisShop/AOS")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jQuery")
    @Scripts.Render("~/bundles/ZaolisShop/js")
    @Scripts.Render("~/bundles/ZaolisShop/AOSJS")

</head>
<body>
    <div class="body-content">
        @{
            ViewBag.Title = "Home Page";
            Layout = null;
            @model BLL.Models.HomePageProductDTO
        }

        <nav class="navbar top-nav navbar-expand-md myMenu" id="top-nav-index">
            <button class="navbar-toggler" style="color: white;" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fas fa-bars"></i>
            </button>
            <div class="navbar-collapse collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="top-li">
                        <a class="link" href="#">
                            HOME
                        </a>

                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="top-li">
                            <a class="link" href="@Url.Action("Dashboard","AdminPanel",new { area="Admin" })">
                                ADMIN&nbsp;PANEL
                            </a>
                        </li>
                    }
                    <li class="top-li">
                        <a class="link" href="#">
                            ABOUT
                        </a>
                    </li>
                    <li class="dropdown menu-large top-li">
                        <a href="#" class="dropdown-toggle link" data-toggle="dropdown">SHOP</a>
                        <ul class="dropdown-menu megamenu row">
                            <li class="col-sm-3">
                                <ul>
                                    <li class="dropdown-header">Categories</li>
                                    <li><a href="@Url.Action("ProductsByCategory", "Home", new { _category = "T-Shirt"})">T-Shirts</a></li>
                                    <li><a href="@Url.Action("ProductsByCategory", "Home", new { _category = "Hoodies"})">Hoodies</a></li>
                                    <li><a href="@Url.Action("ProductsByCategory", "Home", new { _category = "Shoes"})">Shoes</a></li>
                                    <li><a href="@Url.Action("ProductsByCategory", "Home", new { _category = "Shirts"})">Shirts</a></li>
                                </ul>
                            </li>
                        </ul>
                    </li>

                </ul>
            </div>
            <div class=" navbar-collapse  w-100 order-1 order-md-0 dual-collapse2 ">

            </div>
            <div class="right-icons w-100">
                <ul class="right-icons ml-auto">
                    <li class="top-li">
                        @if (Request.IsAuthenticated)
                        {
                            <a class="account-button" href="@Url.Action("Index","Manage")">
                                <i class="far fa-user"></i>
                            </a>
                        }
                        else
                        {
                            <a class="account-button" href="@Url.Action("Login","Account")">
                                <i class="far fa-user"></i>
                            </a>
                        }
                    </li>
                    <li class="top-li">
                        <a href="@Url.Action("Cart","Product")">
                            <i class="fas fa-shopping-cart"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>


        <div id="carouselExampleIndicators" class="carousel carousel-top slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block carousel-top-img" src="https://cdn.shopify.com/s/files/1/0118/8144/7486/files/Untitled_design_59_2200x.png?v=1615214910" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block carousel-top-img" src="https://cdn.shopify.com/s/files/1/0118/8144/7486/files/1_74fa7f87-fd17-4253-9ada-29e9ac0bffe5_2200x.png?v=1615058364" alt="Second slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <div class="cont-products">
            <h3 class="home-title">BEST PRODUCTS</h3>
            @Html.Partial("_productInfList", Model.ProductsNew);
            <div class="button_base b03_skewed_slide_in button-shop">
                <div>SHOP ALL</div>
                <div></div>
                <div>SHOP ALL</div>
            </div>
        </div>

        <div class="section-2">
        </div>

        <div class="cont-products">
            <h3 class="home-title">BEST PRODUCTS</h3>
            @Html.Partial("_productInfList", Model.ProductsNew);
            <div class="button_base b03_skewed_slide_in button-shop">
                <div>SHOP ALL</div>
                <div></div>
                <div>SHOP ALL</div>
            </div>
        </div>
    </div>
    <footer>
        <nav class="footer-inner">
            <section class="footer-item">
                <a class="header-footer" href="register.html">Zaolis</a>

                <h2 class="footer-h2">Course work<br>on ASP.NET<br><i class="fab fa-js-square fa-3x"></i></h2>
            </section>
            <section class="footer-item">
                <h3 class="footer-h3 header-footer">Categories</h3>
                <ul class="footer-ul">
                    <li class="link-footer footer-li"><a class="footer-a" href="#">T-Shirts</a></li>
                    <li class="link-footer footer-li"><a class="footer-a" href="#">Shirts</a></li>
                    <li class="link-footer footer-li"><a class="footer-a" href="#">Hoodies</a></li>
                    <li class="link-footer footer-li"><a class="footer-a" href="#">Jackets</a></li>
                </ul>
            </section>

            <section class="footer-item">
                <h3 class="footer-h3 header-footer">Visit</h3>
                <a class="footer-address footer-span">Soborna 16</a>
                <br>
                <a class="footer-address">Rivne, Rivnens'ka oblast', Ukraine 33000</a>
            </section>

            <section class="footer-item">
                <h3 class="footer-h3 header-footer">New Business</h3>
                <p><a class="footer-address">zaolisproject@gmail.com</a></p>
            </section>

            <section class="footer-item links">
                <h3 class="footer-h3 header-footer">Follow</h3>
                <a class="footer-a" href="https://www.instagram.com/the_oleksiychuk/" style="margin: 5px;"><i class="fab fa-instagram fa-2x"></i></a>
                <a class="footer-a" href="https://twitter.com/bohdan_islamov" style="margin: 5px;"><i class="fab fa-twitter fa-2x"></i></a>
                <a class="footer-a" href="https://t.me/mfive21" style="margin: 5px;"><i class="fab fa-telegram fa-2x"></i></a>
            </section>
        </nav>

        <section class="footer-item">
            <h3 class="footer-h3"></h3>
            <ul class="footer-ul">
                <li><i class="fab fa-cc-visa fa-2x" style="color: lightgray;"></i>   <i class="fab fa-cc-discover fa-2x" style="color: lightgray;"></i> <i class="fab fa-cc-mastercard fa-2x" style="color: lightgray;"></i> <i class="fab fa-cc-amazon-pay fa-2x" style="color: lightgray;"></i>  <i class="fab fa-cc-amex fa-2x" style="color: lightgray;"></i></li>
                <li><i class="fab fa-cc-paypal fa-2x" style="color: lightgray;"></i> <i class="fab fa-cc-stripe fa-2x" style="color: lightgray;"></i> <i class="fab fa-cc-apple-pay fa-2x" style="color: lightgray;"></i> <i class="fab fa-cc-diners-club fa-2x" style="color: lightgray;"></i> <i class="fab fa-cc-jcb fa-2x" style="color: lightgray;"></i></li>
            </ul>
        </section>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @*@section scripts {

            <script>
                AOS.init();
            </script>
        }*@
    @Scripts.Render("~/bundles/ZaolisShop/AOSJS")
</body>
</html>
