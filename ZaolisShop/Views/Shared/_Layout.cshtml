                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <i class="fas fa-bars"></i>
        </button>
        <div class="navbar-collapse collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="top-li">
                    <a class="link" href="#">
                        HOME
                    </a>

                </li>
                <li class="top-li">
                    <a class="link" href="#">
                        ABOUT
                    </a>

                </li>
                <li class="dropdown menu-large top-li">
                    <a href="#" class="dropdown-toggle link" data-toggle="dropdown">SHOP</a>
                    <ul class="dropdown-menu megamenu row">
                        <li class="col-sm-3">
                            <ul>
                                <li class="dropdown-header">Categories</li>
                                <li>@Html.ActionLink("T-Shirts", "ProductsByCategory", "Home", new { },new { _category = "T-Shirt" })</li>
                                <li><a href="#">T-Shirts</a></li>
                                <li><a href="#">Shirts</a></li>
                                <li><a href="#">Hoodies</a></li>

                            </ul>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
        <div class=" navbar-collapse  w-100 order-1 order-md-0 dual-collapse2 ">

        </div>
        <div class="right-icons w-100">
            <ul class="right-icons ml-auto">
                <li class="top-li">
                    <a class="account-button" href="#">
                        <i class="far fa-user"></i>
                    </a>
                </li>
                <li class="top-li">
                    <a href="#">
                        <i class="fas fa-shopping-cart"></i>
                    </a>
                </li>
            </ul>
        </div>
